{% extends 'base.html.twig' %}

{% block title %}Guepar > Sirene{% endblock %}

{% block body %}
    <h1>Recherche dans la base de donn√©es gouvernementale</h1>

    <div class="container-fluid">
        {{ form_start(formRecherche) }}
        {# critere #}
        <div id="divCritere" class="row">
            <label class="col-2">&nbsp;</label>
            <div class="col-3">
                {{ form_widget(formRecherche.critere) }}
            </div>
            <div class="col">
                <input type="image" src="/images/ico-suppress.png" id="btnRecherche">
            </div>
        </div>
        {{ form_end(formRecherche) }}
        <div class="loading"></div>

        {% include 'sirene/navigation.html.twig' %}
        {# resultats #}
        <div id="divResultats" class="row">
            <label class="col-2">Base gouvernementale :</label>
            <div id="divBaseSirene" class="col">
                    {{ render(controller('App\\Controller\\SireneController::resultatRecherche')) }}
{# exemples de test
                {{ render(controller('App\\Controller\\SireneController::resultatRecherche', {'critere':'791604697'})) }}
                {{ render(controller('App\\Controller\\SireneController::resultatRecherche', {'critere':'781092036'})) }}
#}
            </div>
        </div>    

        {% include 'sirene/navigation.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(".loading").hide();
        $(function() {
            $("#frmSirene").submit(function(e){
//            $("#btnRecherche").click(function(){
                e.preventDefault();
                $(".loading").show();
                var destURL = "/sirene/result/"+$("#sirene_critere").val();
alert(destURL);
                $.ajax({
                    type: "POST",
                    url: destURL,
                    cache: false,
                    success: function(data){
alert(data);
                        $('#divBaseSirene').html(data);
                        $(".loading").hide();
                    }
                });    
                return false;
            });
        })
    </script>
{% endblock %}